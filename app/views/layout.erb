<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta http-equiv="x-ua-compatible" content="ie=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <title>Simple Photo Processor</title>

  <link rel="stylesheet" href="/stylesheets/main.css">
  <link rel="icon" href="/images/favicon.png">
</head>

<body>
  <div class="container">
    <strong>Together, we can TODO it!</strong>
    <% if current_user %>
      <small>You are logged in as <%= current_user.email %></small>
      <form method="POST" action="/session" enctype="multipart/form-data">
        <input type="hidden" name="authenticity_token" value="<%= Rack::Protection::AuthenticityToken.token(env['rack.session']) %>">
        <input type="hidden" name="_method" value="DELETE">
        <input type="submit" value="Sign Out">
      </form>
    <% else %>
      <a href="/users/new">Sign Up</a>
      <a href="/sessions/new">Sign In</a>
    <% end %>
  </div>
  <div class="container">
    <%= styled_flash %>
    <%= yield %>
  </div>
</body>

</html>
